// Hamburger
#hamburger.hamburger
  i.fas.fa-bars
// Main content
main
  .header-wrapper
    .header-title
      span MWF System
      h2 Add Stock
  section.add-stock-section
    h3 Record New Stock
    // Main error message
    #mainError.main-error-message
    form#addStockForm(action='/stock' method='POST')
      label Product Name 
      input#productName(type='text' name='productName')
      #errorProductName.error-message
      label Product Type 
      select#productType(name='productType')
        option(value='') Select Type
        option Timber
        option Poles
        option Hardwood
        option Softwood
        option Furniture
      #errorProductType.error-message
      label Cost Price (UGX) 
      input#costPrice(type='number' name='costPrice' min='1' placeholder='Enter cost price')
      #errorCostPrice.error-message
      label Quantity 
      input#quantity(type='number' name='quantity' min='1' placeholder='Enter quantity')
      #errorQuantity.error-message
      label Product Price (UGX) 
      input#productPrice(type='number' name='productPrice' min='1' placeholder='Enter selling price')
      #errorProductPrice.error-message
      label Supplier Name 
      input#supplierName(type='text' name='supplierName')
      #errorSupplierName.error-message
      label Date 
      input#date(type='date' name='date')
      #errorDate.error-message
      label Quality 
      select#quality(name='quality')
        option(value='') Select Quality
        option High
        option Medium
        option Low
      #errorQuality.error-message
      label Color (optional)
      input#color(type='text' name='color')
      label Measurements (optional)
      input#measurements(type='text' name='measurements')
      // Cost Price Total
      label Cost Price Total (UGX)
      input#costTotal(type='text' name='costPriceTotal' readonly='')
      // Total Stock Value
      label Total Stock Value (UGX)
      input#totalValue(type='text' name='TotalStockValue' readonly='')
      // Expected Profit
      label Expected Profit (UGX)
      input#profitValue(type='text' name='expectedProfit' readonly='')
      button(type='submit') Record Stock
    #successMessage.success-message
