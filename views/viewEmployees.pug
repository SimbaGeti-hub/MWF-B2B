doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title View Employees & Suppliers - MWF
    link(rel='stylesheet' href='css/style.css')
    link(rel='stylesheet' href='css/viewEmployees.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css' integrity='sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==' crossorigin='anonymous' referrerpolicy='no-referrer')
    script(src='vendors/fontawesome/all.min.js' defer='')
    script(src='js/main.js' defer='')
    script(src='js/viewEmployees.js' defer='')
    script(src='js/viewSupplierDelete.js' defer='')
    script(src='js/employeeSupplierCards.js' defer='')

  body
    #hamburger.hamburger
      i.fas.fa-bars
    #sidebar.sidebar
      .logo MWF
      ul.menu
        li
          a(href='/dashboard')
            i.fa-solid.fa-gauge-high
            span Dashboard
        //- li
        //-   a(href='/products')
        //-     i.fas.fa-box
        //-     span Products
        li
          a(href='/stock')
            i.fas.fa-plus-square
            span Add Stock
        li
          a(href='/viewstock')
            i.fas.fa-list
            span View Stock
        li
          a(href='/sales')
            i.fa-solid.fa-comments-dollar
            span Add Sales
        li
          a(href='/viewsales')
            i.fas.fa-dollar-sign
            span View Sales
        li
          a(href='/suppliers')
            i.fas.fa-truck
            span Add Suppliers
        li
          a(href='/employees')
            i.fas.fa-user
            span Add Employees
        li
          a.active(href='/viewEmployees')
            i.fas.fa-users
            span View Employees
        li
          a(href='/toDo')
            i.fas.fa-list
            span To-Do
        li
          a(href='/reports')
            i.fas.fa-file-alt
            span Reports
        li
          a(href='/settings')
            i.fa-solid.fa-gear
            span Settings
        li.logout
          a(href='/logout')
            i.fas.fa-sign-out-alt
            span Logout

    main.main-content
      header.header-wrapper
        .header-title
          span Mayondo Wood and Furniture
          h2 Employees & Suppliers

      // Employees Table
      section.employees-section
        h3 Employee List
        table#employeesTable
          thead
            tr
              th Name
              th Age
              th NIN
              th Contact
              th Email
              th Role
              th Actions
          tbody
            if !employees || employees.length === 0
              tr
                td(colspan="7") No employees found.
            else
              each employee in employees
                tr
                  td #{employee.employeeName}
                  td #{new Date().getFullYear() - employee.employeeDob.getFullYear()}
                  td #{employee.employeeNIN}
                  td #{employee.employeeContact}
                  td #{employee.employeeEmail}
                  td #{employee.employeeRole}
                  td
                    a.edit-btn(href=`/employees/edit/${employee._id}`) Edit
                    a.delete-btn(href="#" data-id=`${employee._id}`) Delete

      // Delete Confirmation Modal for Employees
      #deleteEmployeeModal.modal
        .modal-content
          h3 Confirm Delete
          p Are you sure you want to delete this employee?
          button#confirmDeleteEmployee.btn-confirm Confirm
          button#cancelDeleteEmployee.btn-cancel Cancel

      // Suppliers Table
      section.suppliers-section
        h3 Suppliers List
        table#suppliersTable
          thead
            tr
              th Name
              th Product of Supply
              th Location
              th Contact
              th Email
              th Actions
          tbody
            if !suppliers || suppliers.length === 0
              tr
                td(colspan="6") No suppliers found.
            else
              each supplier in suppliers
                tr
                  td #{supplier.name}
                  td #{supplier.product}
                  td #{supplier.location}
                  td #{supplier.phone}
                  td #{supplier.email}
                  td
                    a.edit-btn(href=`/suppliers/edit/${supplier._id}`) Edit
                    a.delete-btn(href="#" data-id=`${supplier._id}`) Delete

      // Delete Confirmation Modal for Suppliers
      #deleteSupplierModal.modal
        .modal-content
          h3 Confirm Delete
          p Are you sure you want to delete this supplier?
          button#confirmDeleteSupplier.btn-confirm Confirm
          button#cancelDeleteSupplier.btn-cancel Cancel

      // Cards Section (moved below tables)
      section.cards-section
        h3 Overview
        .cards-container
          // Cards will be injected dynamically by JS




