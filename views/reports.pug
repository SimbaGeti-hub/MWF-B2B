main.main-content
  header.header-wrapper
    .header-title
      span Mayondo Wood and Furniture
      h2 Reports
  section.reports-section
    h3 Generate Reports
    .filters
      label
        | Report Type:
        select#reportType
          option(value='sales') Sales Report
          option(value='stock') Stock Report
      label
        | From: 
        input#fromDate(type='date')
      label
        | To: 
        input#toDate(type='date')
      button#filterBtn Generate Report
    // Export buttons (hidden until report generated)
    #exportOptions.export-options(style='display: none;')
      button(onclick='printReport()') Print
      button(onclick='exportPDF()') Export PDF
      button(onclick='exportWord()') Export Word
      button(onclick='exportExcel()') Export Excel
    // Sales Report (hidden until filter applied)
    #salesReportSection(style='display: none;')
      h4 Sales Report
      table#salesReportTable
        thead
          tr
            th Customer
            th Product
            th Quantity
            th Total Price
            th Date
        tbody
      p#salesTotal
    // Stock Report (hidden until filter applied)
    #stockReportSection(style='display: none;')
      h4 Stock Report
      table#stockReportTable
        thead
          tr
            th Product
            th Type
            th Quantity
            th Cost Price
            th Supplier
        tbody