main.main-content
  header.header-wrapper
    .header-title
      span Mayondo Wood and Furniture
      h2 Add Employee
  section.employees-section
    .form-card
      h3 Employee Form
      #mainError.main-error-message
      form#addEmployeeForm(action='/employee' method='post')
        // Employee Name
        .form-group
          label(for='employeeName') Name
          input#employeeName(type='text' placeholder='Employee Name')
          #errorEmployeeName.error-message
        // Date of Birth
        .form-group
          label(for='employeeDob') Date of Birth
          input#employeeDob(type='date')
          #errorEmployeeDob.error-message
        // NIN
        .form-group
          label(for='employeeNIN') NIN
          input#employeeNIN(type='text' placeholder='National ID Number')
          #errorEmployeeNIN.error-message
        // Position
        .form-group
          label(for='employeePosition') Position
          input#employeePosition(type='text' placeholder='Position')
          #errorEmployeePosition.error-message
        // Contact
        .form-group
          label(for='employeeContact') Contact
          input#employeeContact(type='text' placeholder='Contact')
          #errorEmployeeContact.error-message
        // Email
        .form-group
          label(for='employeeEmail') Email
          input#employeeEmail(type='email' placeholder='Email')
          #errorEmployeeEmail.error-message
        // Role
        .form-group
          label(for='employeeRole') Role
          input#employeeRole(type='text' placeholder='Role (e.g., Sales, Stock)')
          #errorEmployeeRole.error-message
        // Next of Kin Section
        h4 Next of Kin
        .form-group
          label(for='nokName') Name
          input#nokName(type='text' placeholder='Next of Kin Name')
          #errorNokName.error-message
        .form-group
          label(for='nokContact') Contact
          input#nokContact(type='text' placeholder='Next of Kin Contact')
          #errorNokContact.error-message
        .form-group
          label(for='nokRelation') Relationship
          input#nokRelation(type='text' placeholder='Relationship')
          #errorNokRelation.error-message
        button.btn-submit(type='submit') Add Employee
      p#successMessage.success-message