head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Add Stock
  link(rel='stylesheet' href='css/style.css')
  // sidebar & header
  link(rel='stylesheet' href='css/addStock.css')
  // page-specific
  link(rel='stylesheet' href='css/addSaleErrors.css')
  // errors & success
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
// Sidebar
#sidebar.sidebar
  ul.menu
    li
      a(href='dashboard.html')
        i.fa-solid.fa-gauge-high
        span Dashboard
    li
      a(href='products.html')
        i.fas.fa-box
        span Products
    li
      a.active(href='addStock.html')
        i.fas.fa-plus-square
        span Add Stock
    li
      a(href='viewStock.html')
        i.fas.fa-list
        span View Stock
    li
      a(href='addSales.html')
        i.fa-solid.fa-comments-dollar
        span Add Sales
    li
      a(href='viewSales.html')
        i.fas.fa-dollar-sign
        span Sales
    // <li><a href="rawMaterials.html"><i class="fas fa-cubes"></i><span>Raw Materials</span></a></li>
    li
      a(href='suppliers.html')
        i.fas.fa-truck
        span Suppliers
    // <li><a href="delivery.html"><i class="fas fa-route"></i><span>Delivery</span></a></li>
    li
      a(href='todo.html')
        i.fas.fa-list
        span To-Do
    li
      a(href='reports.html')
        i.fas.fa-file-alt
        span Reports
    li
      a(href='employees.html')
        i.fas.fa-user
        span Employees
