      a(href='logout.html')
        i.fas.fa-sign-out-alt
        span Logout
// Hamburger
#hamburger.hamburger
  i.fas.fa-bars
// Main content
main
  .header-wrapper
    .header-title
      span MWF System
      h2 Add Stock
  section.add-stock-section
    h3 Record New Stock
    // Main error message
    #mainError.main-error-message
    form#addStockForm
      label Product Name 
      input#productName(type='text')
      #errorProductName.error-message
      label Product Type 
      select#productType
        option(value='') Select Type
        option Timber
        option Poles
        option Hardwood
        option Softwood
        option Furniture
      #errorProductType.error-message
      label Cost Price (UGX) 
      input#costPrice(type='number' min='1' placeholder='Enter cost price')
      #errorCostPrice.error-message
      label Quantity 
      input#quantity(type='number' min='1' placeholder='Enter quantity')
      #errorQuantity.error-message
      label Product Price (UGX) 
      input#productPrice(type='number' min='1' placeholder='Enter selling price')
      #errorProductPrice.error-message
      label Supplier Name 
      input#supplierName(type='text')
      #errorSupplierName.error-message
      label Date 
      input#date(type='date')
      #errorDate.error-message
      label Quality 
      select#quality
        option(value='') Select Quality
        option High
        option Medium
        option Low
      #errorQuality.error-message
      label Color (optional)
      input#color(type='text')
      label Measurements (optional)
      input#measurements(type='text')
      // Cost Price Total
      label Cost Price Total (UGX)
      input#costTotal(type='text' readonly='')
      // Total Stock Value
      label Total Stock Value (UGX)
      input#totalValue(type='text' readonly='')
      // Expected Profit
      label Expected Profit (UGX)
      input#profitValue(type='text' readonly='')
      button(type='submit') Record Stock
    #successMessage.success-message
// Scripts
script(src='js/storage.js')
script(src='js/addStockStorage.js')
script(src='js/addStock.js')
script(src='js/main.js')