main.main-content
  header.header-wrapper
    .header-title
      span Mayondo Wood and Furniture
      h2 To-Do Management
  section.todo-section
    // Form Selector
    .form-card
      h3 Select Form
      select#formSelector
        option(value='') -- Choose Form --
        option(value='deliveryForm') Register Delivery
        option(value='taskForm') Register Task
    // Delivery Form
    #deliveryForm.form-card(style='display:none;')
      h3 Register Delivery
      #deliveryMainError.main-error-message
      form#addDeliveryForm(novalidate='')
        .form-group
          label(for='deliveryCustomerName') Customer Name
          input#deliveryCustomerName(type='text' placeholder='Customer Name')
          #errorDeliveryCustomerName.error-message
        .form-group
          label(for='deliveryProduct') Product
          input#deliveryProduct(type='text' placeholder='Product to deliver')
          #errorDeliveryProduct.error-message
        .form-group
          label(for='deliveryLocation') Location
          input#deliveryLocation(type='text' placeholder='Delivery Location')
          #errorDeliveryLocation.error-message
        .form-group
          label(for='deliveryDate') Date
          input#deliveryDate(type='date')
          #errorDeliveryDate.error-message
        .form-group
          label(for='deliveryTime') Time
          input#deliveryTime(type='time')
          #errorDeliveryTime.error-message
        .form-group
          label(for='deliveryAssignedPerson') Assigned Person
          input#deliveryAssignedPerson(type='text' placeholder='Driver / Assigned person')
          #errorDeliveryAssignedPerson.error-message
        .form-group
          label(for='deliveryCustomerNumber') Customer Number
          input#deliveryCustomerNumber(type='text' placeholder='Customer phone number')
          #errorDeliveryCustomerNumber.error-message
        .form-group
          label(for='deliveryNumberOfItems') Number of Items
          input#deliveryNumberOfItems(type='number' placeholder='Number of items' min='1')
          #errorDeliveryNumberOfItems.error-message
        button.btn-submit(type='submit') Add Delivery
      p#deliverySuccessMessage.success-message
    // Task Form
    #taskForm.form-card(style='display:none;')
      h3 Register Task
      #taskMainError.main-error-message
      form#addTaskForm(novalidate='')
        .form-group
          label(for='taskName') Task
          input#taskName(type='text' placeholder='Task to be done')
          #errorTaskName.error-message
        .form-group
          label(for='taskDate') Date
          input#taskDate(type='date')
          #errorTaskDate.error-message
        .form-group
          label(for='taskTime') Time
          input#taskTime(type='time')
          #errorTaskTime.error-message
        .form-group
          label(for='taskLocation') Location
          input#taskLocation(type='text' placeholder='Location')
          #errorTaskLocation.error-message
        .form-group
          label(for='taskAssignedPerson') Assigned Person
          input#taskAssignedPerson(type='text' placeholder='Person responsible')
          #errorTaskAssignedPerson.error-message
        button.btn-submit(type='submit') Add Task
      p#taskSuccessMessage.success-message
    // Table
    .table-wrapper
      h3 Registered Deliveries 
      table#todoTable
        thead
          tr
            th Name / Customer
            th Product 
            th Location
            th Date
            th Time
            th Assigned Person
            th Customer Number / N/A
            th Number of Items / N/A
            th Actions
        tbody
    .table-wrapper
      h3 Registered Tasks
      table#todoTable
        thead
          tr
            th Task
            th Date
            th Time
            th Location
            th Assigned Person
            th Actions
        tbody
